{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist/js",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "target": "es2015", // Cambiado de "es5" a "es2015"
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/js/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}